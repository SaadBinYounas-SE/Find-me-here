<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/IvcardView"
        android:layout_width="32.50dp"
        android:layout_height="32.50dp"
        app:cardCornerRadius="32.50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="13dp"
        >

        <ImageView
            android:id="@+id/ivRecieverImg"
            android:layout_width="32.50dp"
            android:layout_height="32.50dp"
            android:src="@drawable/placeholder_image"
            tools:ignore="MissingClass" />
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/tvRecieverMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="1.3dp"
        android:layout_marginTop="6.5dp"
        android:layout_marginEnd="6.5dp"
        android:layout_marginBottom="6.5dp"
        android:layout_toRightOf="@+id/IvcardView"
        android:background="@drawable/reciever_shape"
        android:padding="9.1dp"
        android:text="hi how are you?"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>